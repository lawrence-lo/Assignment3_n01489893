@model IEnumerable<Assignment3_n01489893.Models.Teacher>
@{
    ViewBag.Title = "List of Teachers";
}

<h1>List of Teachers</h1>
<div class="container">
    <form class="form-inline" action="/Teacher/SearchResult/" method="GET">
        <div class="form-group">
            <label for="SearchKey">Search Teachers:</label>
            <input type="text" class="form-control" id="SearchKey" name="SearchKey" placeholder="Name/Hiredate/Salary">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

    <div class="list-group">
        @foreach (var teacher in Model)
        {
            <a href="/Teacher/Show/@teacher.TeacherId" class="list-group-item">@teacher.TeacherFname @teacher.TeacherLname</a>
        }
    </div>
</div>

