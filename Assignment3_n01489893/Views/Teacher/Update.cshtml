@model Assignment3_n01489893.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<h1>Update Teacher</h1>
<nav class="y-margin">
    <a class="btn btn-default" href="/Teacher/Show/@Model.TeacherId">Back</a>
</nav>
<div>
    <form name="addTeacherForm" method="POST" action="/Teacher/Update/@Model.TeacherId" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="TeacherFname">First Name:</label>
            <input asp-for="TeacherFname" class="form-control" type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFname" />
        </div>
        <div class="form-group">
            <label for="TeacherLname">Last Name:</label>
            <input asp-for="TeacherLname" class="form-control" type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLname" />
        </div>
        <div class="form-group">
            <label for="EmployeeNumber">Employee Number:</label>
            <input class="form-control" type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber" />
        </div>
        <div class="form-group">
            <label for="TeacherHireDate">Hire Date:</label>
            <input class="form-control" type="date" id="TeacherHireDate" name="TeacherHireDate" value="@Model.TeacherHireDate.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-group">
            <label for="TeacherSalary">Salary:</label>
            <input class="form-control" type="number" step=".01" min="0" id="TeacherSalary" name="TeacherSalary" value="@Model.TeacherSalary" />
        </div>
        <input class="btn btn-default" type="submit" value="Update Teacher" />
    </form>
</div>